extends base

block head
  if request.path.endswith('/draw')
    script(src=url_for('static', filename='js/bingo-draw.js'))
  elif request.path.endswith('/idle')
    script(src=url_for('static', filename='js/bingo-idle.js'))
  if request.path.startswith('/lottery')
    link(rel='stylesheet' href=url_for('static', filename='css/themes/act.css'))
  elif request.path.startswith('/bonus')
    link(rel='stylesheet' href=url_for('static', filename='css/themes/osa.css'))
  link(rel='stylesheet' href=url_for('static', filename='css/bingo.css'))

block content
  article#winner
    .ui.center.aligned.header= name
      .sub.header= desc
  article#canvas(data-nexturl=link)
    a(href=link hidden) next
    .ui.seven.column.grid.cubes
      each _ in range(49)
        .column.cube
    .cube.color1(hidden)  // for js to fetch css colors
    .cube.color2(hidden)

