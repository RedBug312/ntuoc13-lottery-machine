extends base

block head
  if request.path.startswith('/lottery/draw')
    script(src=url_for('static', filename='js/bingo-burst.js'))
  elif request.path.startswith('/lottery/idle')
    script(src=url_for('static', filename='js/bingo-shift.js'))
  link(rel='stylesheet' href=url_for('static', filename='css/lottery.css'))

block content
  .ui.middle.aligned.grid.container
    .sixteen.wide.column
      #winner
        if winner
          .ui.center.aligned.grey.header= winner.姓名
            .sub.header= winner.學號
      #canvas(data-nexturl=link)
        .ui.seven.column.grid.cubes
          each _ in range(49)
            .column.cube

