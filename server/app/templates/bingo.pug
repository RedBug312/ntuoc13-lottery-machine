extends base

block head
  if '/draw' in request.path
    script(src=url_for('static', filename='js/bingo-burst.js'))
  elif '/idle' in request.path
    script(src=url_for('static', filename='js/bingo-shift.js'))
  if request.path.startswith('/lottery')
    link(rel='stylesheet' href=url_for('static', filename='css/lottery.css'))
  elif request.path.startswith('/bonus')
    link(rel='stylesheet' href=url_for('static', filename='css/themes/bonus.css'))

block content
  article#winner
    if winner
      .ui.center.aligned.grey.header= winner.姓名
        .sub.header= winner.學號
  article#canvas(data-nexturl=link)
    a(href=link hidden) next
    .ui.seven.column.grid.cubes
      each _ in range(49)
        .column.cube
    .cube.color1(hidden)  // for js to fetch css colors
    .cube.color2(hidden)

