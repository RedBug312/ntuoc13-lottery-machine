extends base

block head
  if '/draw' in request.path
    script(src=url_for('static', filename='js/fifty-draw.js'))
  elif '/idle' in request.path
    script(src=url_for('static', filename='js/fifty-idle.js'))
  link(rel='stylesheet' href=url_for('static', filename='css/themes/osa.css'))
  link(rel='stylesheet' href=url_for('static', filename='css/fifty.css'))

block content
  article#icons(data-nexturl=url_for('fifty.draw'))
    .ui.center.aligned.basic.segment
      .ui.massive.basic.icon.buttons
        button.ui.button#trigger
          i.heart.outline.icon
          span(hidden) next
        button.ui.button
          i.comment.outline.icon
        button.ui.button
          i.paper.plane.outline.icon
  article#winners
    .ui.basic.segment
      for winner in winners
        .ui.huge.basic.label
          i.at.icon
          span= winner

